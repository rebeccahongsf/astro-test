---
import '/dist/css/decanter.css';

interface Props {
	text: string;
}

const {text} = Astro.props;
---
<div class="su-brand-bar su-brand-bar--bright">
    <div class="su-brand-bar__container">
      <a class="su-brand-bar__logo" href="https://stanford.edu">
        Stanford University
        <span class="su-brand-bar__link--a11y">(link is external)</span>
      </a>
    </div>
  </div>
<div class="su-alert">
    <div class="centered-container">
      <div class="su-alert__dismiss">
        <button aria-label="Dismiss alert" class="su-alert__dismiss-button">
            Dismiss
          <i class="su-fas su-fa-times-circle"></i>
        </button>
      </div>
      <div class="su-alert__header">
        <span class="su-alert__icon">
          <i class="su-far su-fa-bell"></i>
        </span>
      </div>
      <div class="su-alert__body">
        <div class="su-alert__text">
            {text}
        </div>
      </div>
    </div>
  </div>



